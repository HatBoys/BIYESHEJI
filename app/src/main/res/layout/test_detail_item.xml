<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_student_test_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@mipmap/question"
        android:drawablePadding="6dp"
        android:padding="6dp"
        android:text="@string/app_name"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/text_size_little_big"/>

    <RadioGroup
        android:id="@+id/rg_test_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RadioButton
            android:id="@+id/rb_que_a"
            style="@style/StudentTestDetailStyle"
            />
        <RadioButton
            android:id="@+id/rb_que_b"
            style="@style/StudentTestDetailStyle"
            />
        <RadioButton
            android:id="@+id/rb_que_c"
            style="@style/StudentTestDetailStyle"
            />
        <RadioButton
            android:id="@+id/rb_que_d"
            style="@style/StudentTestDetailStyle"
            />
    </RadioGroup>



</LinearLayout>